# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# PostgreSQL — same DB as n8n uses
DATABASE_URL=postgresql://user:password@localhost:5432/ba_dashboard

# Teamwork API (optional — tools fall back to stubs if not set)
TEAMWORK_API_KEY=
TEAMWORK_DOMAIN=yourcompany.teamwork.com

# Slack (optional)
SLACK_BOT_TOKEN=xoxb-...

# CORS — comma-separated origins for the React frontend
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Model (default: claude-sonnet-4-6)
ANTHROPIC_MODEL=claude-sonnet-4-6
